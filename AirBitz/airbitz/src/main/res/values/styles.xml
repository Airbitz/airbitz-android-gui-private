<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="toolbarBackgroundColor">@color/colorPrimary</item>
        <item name="toolbarTextColor">@android:color/white</item>
    </style>
 
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- toolbar attributes -->
        <item name="toolbarBackgroundColor">@color/colorPrimary</item>
        <item name="toolbarTextColor">@android:color/white</item>
    </style>

    <style name="ToolBarCommon">
    </style>

    <style name="CategoryItem">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/content_padding_2</item>
        <item name="android:paddingRight">6.3dp</item>
    </style>

    <style name="CategoryItemTop">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed_top</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/content_padding_2</item>
        <item name="android:paddingRight">6.3dp</item>
    </style>

    <style name="CategoryItemBottom">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed_bottom</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/content_padding_2</item>
        <item name="android:paddingRight">6.3dp</item>
    </style>

    <style name="CategoryItemDetail">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:focusable">false</item>
        <!-- Note: don't use padding here since layouts will override the value of padding<side> -->
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:paddingTop">@dimen/content_padding</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
    </style>

    <style name="CategoryItemDetailTop">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/transparent_until_pressed_top</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:drawablePadding">@dimen/content_padding_2</item>
        <item name="android:focusable">false</item>
        <!-- Note: don't use padding here since layouts will override the value of padding<side> -->
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:paddingRight">@dimen/content_padding</item>
        <item name="android:paddingTop">@dimen/content_padding</item>
        <item name="android:paddingBottom">@dimen/content_padding</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:gravity">center</item>
    </style>

    <style name="AlertDialogCustomLight" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="WhiteDropShadow">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="BlackDropShadow">
        <item name="android:shadowColor">@color/black_shadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="GrayDropShadow">
        <item name="android:shadowColor">@color/gray_shadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="LandingEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_text_field_text</item>
        <item name="android:textColorHint">@color/dark_text_field_text_hint</item>
        <item name="android:textCursorDrawable">@drawable/bold_cursor_white</item>
        <item name="android:background">@drawable/emboss_down</item>
    </style>

    <style name="SettingsFragment">
        <item name="android:background">@android:color/white</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SettingsGroup">
        <item name="android:background">@color/settings_group</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/settings_button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsRow">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/setting_item_background</item>
    </style>

    <style name="SettingsRowFirst" parent="SettingsRow">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SettingsItem">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/SettingsTextAppearance</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
    </style>

    <style name="SettingsButton" parent="SettingsItem">
        <item name="android:background">@drawable/settings_button</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingsSwitch" parent="SettingsItem">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:switchMinWidth">0dp</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:textAppearance">@style/SettingsTextAppearance</item>
        <item name="android:textColor">@color/settings_button_text</item>
    </style>

    <style name="SettingsEditText" parent="SettingsItem">
        <item name="android:enabled">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:inputType">textNoSuggestions|textCapWords</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/SettingsTextAppearance</item>
    </style>

    <style name="SettingsRadioItem" parent="SettingsRow">
        <item name="android:button">@null</item>
        <item name="android:checked">true</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:drawableRight">@drawable/radio_button</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:textAppearance">@style/SettingsTextAppearance</item>
        <item name="android:textColor">@color/settings_button_text</item>
    </style>

    <style name="SettingsRadioItemFirst" parent="SettingsRadioItem">
        <item name="android:background">@null</item>
    </style>

    <style name="SettingsSplitText" parent="SettingsItem">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_button_text</item>
    </style>

    <style name="SettingsSplitButton" parent="SettingsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/settings_button</item>
        <item name="android:textColor">@color/blue_text</item>
    </style>

    <style name="SettingsSpinner" parent="SettingsSplitButton" />

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">12.6dp</item>
        <item name="android:paddingRight">12.6dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="GreenButton" parent="Button">
        <item name="android:background">@drawable/bg_button_green</item>
    </style>

    <style name="BlueButton" parent="Button">
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>

    <style name="RedButton" parent="Button">
        <item name="android:background">@drawable/bg_button_red</item>
    </style>

    <style name="OrangeButton" parent="Button">
        <item name="android:background">@drawable/bg_button_orange</item>
    </style>

    <!-- Calculator Styles -->
    <style name="CalcButton">
        <item name="android:layout_height">@dimen/calc_button_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/calc_button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/calc_button_numsize</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WhiteCalc" parent="CalcButton">
        <item name="android:background">@drawable/calc_btn_white</item>
    </style>

    <style name="GreyCalc" parent="CalcButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/calc_btn_gray</item>
    </style>

    <style name="GreenCalc" parent="CalcButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/calc_btn_green</item>
        <!-- item name="android:textSize">@dimen/calc_button_textsize</item -->
    </style>

    <style name="OrangeCalc" parent="CalcButton">
        <item name="android:background">@drawable/calc_btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- item name="android:textSize">@dimen/calc_button_textsize</item -->
    </style>

    <style name="DrawerButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transparent_until_pressed</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
