<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryFrost"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fragment_category_textview_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/wallet_row_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12.6dp"
        android:layout_marginStart="12.6dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/gray_text"
         />

    <TextView
        android:id="@+id/textview_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/dark_blue_text"
         />

     <!-- TODO: find a better icon to use -->
     <FrameLayout
        android:id="@+id/drag_container"
         android:layout_height="match_parent"
         android:layout_width="50dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:background="@drawable/ico_dots"
            />

    </FrameLayout>

</LinearLayout>
