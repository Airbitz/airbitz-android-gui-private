<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buysell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryFrost">

    <include layout="@layout/layout_toolbar_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="12.6dp"
        android:layout_marginRight="12.6dp"
        android:layout_marginTop="18dp">

        <ListView
            android:id="@+id/fragment_buysell_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:divider="@drawable/wallet_list_divider"
            android:dividerHeight="0dp" />

    </RelativeLayout>

</RelativeLayout>
